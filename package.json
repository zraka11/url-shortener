{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A fullstack JavaScript application for shortening URLs with expiration and statistics.",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "postcss": "^8.5.6"
  }
}
